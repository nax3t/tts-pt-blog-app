<div class="blog-header">
	<div class="row">
		<div class="col-md-8">
			  <div class="blog-title">
				  <%= @article.title %>
			  </div>
			 
			<p>
			  <%= @article.text %>
			</p>
			<hr>
			<%= link_to 'Edit', edit_article_path(@article) %>
		</div>
		<div class="col-md-4">
			<h2>Comments</h2>
			<%= render @article.comments %>
			 
			<h2>Add a comment:</h2>
			<%= render 'comments/form' %>			 
		</div>
	</div>
</div>